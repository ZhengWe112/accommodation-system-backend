<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mybatisplus.mapper.ResponsibleLeaderMapper">
    <select id="selectByResponsibleLeader" resultType="com.example.mybatisplus.model.domain.ResponsibleLeader">
        select  * from responsible_leader
        <where>
            <if test="responsible_leader.job_id != null">
                and job_id = #{responsible_leader.job_id}
            </if>
            <if test="responsible_leader.fullname != null and responsible_leader.fullname != ''">
                and fullname= #{responsible_leader.fullname}
            </if>
            <if test="responsible_leader.password != null">
                and password = #{responsible_leader.password}
            </if>
        </where>
    </select>
</mapper>
